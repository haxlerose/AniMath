<div class="flex flex-col">
  <%= tag.div "#{@game.name.titleize} Animals", class: 'text-2xl md:text-4xl mb-4' %>
  <% @animals.each do |level, animals| %>
    <div class="flex mb-4">
      <% level.times do %>
        <%= image_tag "svg/star.svg", size: '40' %>
      <% end %>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mb-12">
      <% animals.each do |animal| %>
        <% if @owned_animals.include?(animal) %>
          <%= render 'owned_animal', animal: animal %>
        <% else %>
          <%= render 'unowned_animal', animal: animal %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
