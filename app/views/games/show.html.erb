<%= form_with url: guess_path(@game), html: {
    id: "guess_form",
    data: {
      controller: "answer",
      answer_correct_answer_value: @puzzle[:sum],
      answer_target: "form"
    },
    class: 'flex flex-col'
  } do %>
  <%= hidden_field_tag :sum, @puzzle[:sum] %>
  <%= hidden_field_tag :game_id, @game.id %>
  <%= hidden_field_tag :animal_id, @animal.id %>

  <%= tag.div "LEVEL #{@animal.level}", class: 'mb-4 md:mb-8 text-3xl font-semibold self-center' %>
  <div class="animal-card" data-answer-target="animalCard">
    <%= render 'animals/owned_animal', animal: @animal %>
  </div>

  <%= tag.div "#{@puzzle[:addend1]} + #{@puzzle[:addend2]}", class: 'self-center text-4xl font-semibold mt-4 md:mt-8 mb-4 md:mb-6' %>

  <div class="flex flex-wrap gap-3 justify-center">
    <% @puzzle[:answers].each do |answer| %>
      <div class="relative">
        <%= radio_button_tag :guess, answer, false,
            class: "absolute opacity-0 w-full h-full cursor-pointer peer",
            data: {
              answer_target: "answer",
              action: "change->answer#select"
            } %>
        <%= label_tag "guess_#{answer}", answer,
            class: "block px-4 py-2 border border-4 rounded-full peer-checked:bg-blue-500 peer-checked:text-white peer-checked:border-blue-700 peer-hover:bg-gray-100 cursor-pointer transition-colors text-2xl" %>
      </div>
    <% end %>
  </div>
<% end %>
